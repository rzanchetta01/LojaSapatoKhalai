@model lojaSapato.Models.Modelo

@{
    ViewData["Title"] = "Cadastrar";
}


<form method="post" asp-action="CadastrarModelo">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Cadastrar um modelo</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CodigoRef">nome do modelo</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CodigoRef" class="form-control" />
                        <span asp-validation-for="CodigoRef" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Tamanho">tamanho</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Tamanho" class="form-control" />
                        <span asp-validation-for="Tamanho" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Cor"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Cor" class="form-control" />
                        <span asp-validation-for="Cor" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="IdFornecedor"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IdFornecedor" class="form-control" />
                            <span asp-validation-for="IdFornecedor" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Tamanho"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Tamanho" class="form-control" />
                                <span asp-validation-for="Tamanho" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-8 offset-4 row">

                                <div class="col">
                                    <input type="submit" class="btn btn-info w-100" value="Fazer compra" />
                                </div>
                                <div class="col">
                                    <a asp-action="Listar" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Voltar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
               
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}